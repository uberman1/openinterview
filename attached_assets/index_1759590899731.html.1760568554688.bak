<!doctype html>
<meta charset="utf-8">
<title>Redirecting…</title>
<meta http-equiv="refresh" content="0; url=/login.html">
<script>
  // Legacy SPA hash route migration (/#/login → /login.html)
  try {
    if (location.hash && location.hash.startsWith('#/')) {
      location.replace('/login.html');
    } else {
      location.replace('/login.html');
    }
  } catch (e) {
    window.location.href = '/login.html';
  }
</script>
<noscript>
  <meta http-equiv="refresh" content="0; url=/login.html">
  <p>JavaScript disabled. <a href="/login.html">Continue to Login</a></p>
</noscript>
