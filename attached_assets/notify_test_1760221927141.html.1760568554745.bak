<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>Notifications Test</title>
  <meta http-equiv="Content-Security-Policy" content="default-src 'self' https://cdn.jsdelivr.net; script-src 'self' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline'; connect-src 'self'">
  <link rel="preconnect" href="https://cdn.jsdelivr.net"/>
</head>
<body>
  <main class="container">
    <h1 id="h1">Notifications Test</h1>
    <div>
      <label>Email <input id="email" type="email" autocomplete="email"></label>
    </div>
    <div>
      <button id="send_otp_btn">Send OTP</button>
      <button id="send_generic_btn">Send Generic</button>
    </div>
    <p id="status" role="status" aria-live="polite"></p>
    <ul id="outbox_list" aria-label="Outbox"></ul>
  </main>
  <script src="./notify.bind.js"></script>
</body>
</html>
